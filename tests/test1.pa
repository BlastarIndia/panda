# First tests

def print(arg):
    console.log(arg)
end

def test(name, a, b):
    print(name + " passed:\n\t\t\t" + (a == b))
end

# Basic arithmetic and primitives

test("arithmetic 1", 4 + 4 * (5 - 22) + 5.3 / 2, -61.35)
test("arithmetic 2", 1 - 2, -1)
test("arithmetic 3", - 1, -1)
test("arithmetic 4", 1-2, -1)

test("booleans 1", (false or true) and false == false, true)
test("booleans 2", false and true == false, false)

test(">=", 3 >= 5, false)
test("<=", 3 <= 5, true)

test(">", 3 > 5, false)
test("<", 3 < 5, true)

test("not 1", not true, false)
test("not 2", not false, true)

var a = 5
test("unary minus", -a, 5 - 10)

# conditions
a = 5
var b = true
if a == 5:
    b = false
end

test("if 1", b, false)

a = 5
b = true
if a == 5: b = false end

test("if 2", b, false)

a = 5
b = false
if a == 6:
    b = false
else:
    b = true
end

test("else 1", b, true)

a = 5
b = 0
if a == 1:
    b = 1
else if a == 2:
    b = 2
else if a == 3:
    b = 3
else:
